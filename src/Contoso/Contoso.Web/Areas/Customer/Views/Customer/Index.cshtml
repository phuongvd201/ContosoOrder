@section Scripts
{
    <script type="text/javascript">
    var Order = (function () {
        var $tbNewOrder = $(".tbNewOrder tbody");
        var orders = [];
        var listProducts = $.parseJSON('@Html.Raw(Json.Encode(ViewBag.Products))');
        var products = '@Html.Raw(Ajax.JavaScriptStringEncode(Html.DropDownList("ProductId", (List<SelectListItem>)ViewBag.ProductId, new { @class = "form-control ProductId",id="" }).ToHtmlString()))';
        var isValid;

        var addOrder = function () {
            var orderId = orders.length + 1;

            if (orderId === 1) $('#frmOrderDetails').show();

            var htmlAddNewOrder = '<tr>' +
                '<td class="orderId">' + orderId + '</td>' +
                '<td>' + products + '</td>' +
                '<td><input type="number" min=1 name="quantity"  disabled class="form-control required quantity"/></td>' +
                '<td class="price"></td>' +
                '<td class="total"></td>' +
            '<td><button class="btn btn-danger btn-xs btnRemoveOrder" ><span class="glyphicon glyphicon-trash"></span></button></td>' +
                '</tr>';

            $tbNewOrder.append(htmlAddNewOrder);
            orders.push({});
        }
        
        var removeOrder = function () {

            var $curOrder = $(event.target).closest('tr');
            var orderId = $tbNewOrder.find('tr').index($curOrder);
            $curOrder.remove();
            if (orders.length === 1) $("#frmOrderDetails").hide();
            orders.splice(orderId, 1);

            $tbNewOrder.find("tr").each(function () {
                var $this = $(this);
                $this.find(".orderId").text($this.index() + 1);
            });
        }

        var registerEvents = function () {

            $('#frmCustomerInfo').validate({
                rules: {
                    Name: "required",
                    Email: {
                        required: true,
                        email: true
                    }
                },
                messages: {
                    Name: "Please specify your name",
                    Email: {
                        required: "We need your email address to contact you",
                        email: "Your email address must be in the format of name@domain.com"
                    }
                }
            });

            $('#frmOrderDetails').validate({
                rules: {
                    ProductId: "required",
                    quantity: "required"
                },
                messages: {
                    ProductId: "",
                    quantity: {
                        required: ""
                    }
                }
            });

            $("#btnAddNewOrder").on("click", addOrder);

            $tbNewOrder.delegate(".ProductId", "change", function (event) {
                var $curOrder = $(event.target).closest('tr');
                var orderId = $tbNewOrder.find('tr').index($curOrder);

                if ($(this).val() === '') {
                    $curOrder.find(".price").text("");
                    $curOrder.find(".quantity").val("").attr("disabled",true);
                    $curOrder.find(".total").text("");

                    return;
                }

                $curOrder.find(".quantity").attr("disabled", false);
                var curProduct = {};
                for (var i = 0; i < listProducts.length; i++) {
                    if (listProducts[i].ProductId == $(this).val()) {
                        curProduct = listProducts[i];
                        break;
                    }
                }

                orders[orderId] = curProduct;

                $curOrder.find(".price").text("$" + curProduct.Price);
                $curOrder.find(".quantity").val("");
                $curOrder.find(".total").text("");
            });

            $tbNewOrder.delegate(".quantity", "keypress propertychange change keyup input paste", function (event) {
                if (event.which != 8 && event.which != 0 && (event.which <= 48 || event.which > 57)) {
                    return false;
                }

                var $curOrder = $(event.target).closest('tr');
                var orderId = $tbNewOrder.find('tr').index($curOrder);
                orders[orderId].Quantity = $(this).val();
                $curOrder.find(".total").text("$" + (orders[orderId].Price * orders[orderId].Quantity).toFixed(2));


            });

            $tbNewOrder.delegate(".btnRemoveOrder", "click", removeOrder);

            $('#btnSubmit').on("click", function () {

                var $frmCustomerInfo = $('#frmCustomerInfo');

                if (!$frmCustomerInfo.valid() || !$('#frmOrderDetails').valid()) return;

                if (orders.length < 1) {
                    showModal("warning", "You must add at lease one order to submit !<br/> Please click to New Order button to add new order");
                    return;
                }

                var o = {};
                var a = $frmCustomerInfo.serializeArray();
                $.each(a, function () {
                    if (o[this.name] !== undefined) {
                        if (!o[this.name].push) {
                            o[this.name] = [o[this.name]];
                        }
                        o[this.name].push(this.value || '');
                    } else {
                        o[this.name] = this.value || '';
                    }
                });

                var orderModel = {
                    Customer: o,
                    OrderDetails: orders
                }
                var urlOrder = '@Url.Action("Order", "Customer", new { Area = "Customer" })';

                callAjaxPost(urlOrder, orderModel, function (response) {
                        showModal("success", "You have been order successfully !"   , function() {
                            window.location.href = '@Url.Action("Index", "Customer", new {Area="Customer"})';
                        });
                    },
                function (error) {
                    showModal("alert", error, function () {
                        window.location.href = '@Url.Action("Index", "Customer", new {Area="Customer"})';
                    });
                });


            });
        }

        return {
            orders: orders,
            registerEvents: registerEvents
        }
    })();

    Order.registerEvents();

</script>
}





